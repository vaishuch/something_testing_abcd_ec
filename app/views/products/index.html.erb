	 <div class = "filterpart">
   <div class = "part"> 
   <% Property.all.collect do |pr| %>
    <div class="floating-box">
    <%=  (pr.name).upcase %> <br>
    </div>
    <% pr.propertyvalues.collect do |pv| %>
    <input type="checkbox" > <%=  (pv.value).upcase %>  <p>
    <% end %>
    <% end %>
    </div>
   </div>
	</div>
		
	<% @products.each do |product| %>
  <div class="product-tile">
      <div class="product-img">
     <% Photo.where(product_id: product.id).collect do|img| %>    
      <%= link_to image_tag(img.avatar.url(:medium)), product_path(product) %>
      <% end %> </div>
      <div class="product-title"><%#= product.name %>    
      <% @b = Brand.find(product.brand_id) %> 
      <%= @b.name %> <%= product.name %>
      <% @q = product.quantity %>
      <% if (@q.available_qty) > 0 %>
      <%= @q.selling_price %>   
      <% end %>
		</div>  
	</div>
  <% end %>
  
